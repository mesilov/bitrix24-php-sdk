{
  "name": "mesilov/bitrix24-php-sdk",
  "description": "A powerful PHP library for the Bitrix24 REST API",
  "keywords": [
    "Bitrix24",
    "PHP",
    "REST",
    "API"
  ],
  "type": "library",
  "homepage": "https://github.com/mesilov/bitrix24-php-sdk",
  "license": "MIT",
  "authors": [
    {
      "name": "Maxim Mesilov",
      "homepage": "https://github.com/mesilov/"
    }
  ],
  "require": {
    "php": "7.4.*|^8.0",
    "ext-json": "*",
    "ext-curl": "*",
    "psr/log": "1.1.3",
    "fig/http-message-util": "1.1.*",
    "symfony/http-client": "5.2.*",
    "symfony/http-client-contracts": "^2.1",
    "symfony/event-dispatcher": "5.2.*",
    "ramsey/uuid": "^4.0"
  },
  "require-dev": {
    "monolog/monolog": "2.1.*",
    "symfony/console": "5.2.*",
    "symfony/dotenv": "5.2.*",
    "symfony/debug-bundle": "5.2.*",
    "phpstan/phpstan": "0.12.59",
    "phpunit/phpunit": "9.3.*",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Bitrix24\\SDK\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bitrix24\\SDK\\Tools\\": "tools",
      "Bitrix24\\SDK\\Tests\\": "tests"
    }
  },
  "scripts": {
    "unit-tests": [
      "phpunit --colors=always --verbose"
    ],
    "phpstan-analyse": [
      "vendor/bin/phpstan analyse"
    ]
  }
}
